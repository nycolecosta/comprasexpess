<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.ComprasExpress"
        tools:targetApi="31">
        <activity
            android:name=".activity.loja.MainActivityLoja"
            android:exported="false" />
        <activity
            android:name=".autenticacao.CadastroActivity"
            android:exported="false" />
        <activity
            android:name=".autenticacao.RecuperaContaActivity"
            android:exported="false" />
        <activity
            android:name=".autenticacao.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".activity.aplicativo.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.usuario.MainActivityUsuario"
            android:exported="true" />
    </application>

</manifest>